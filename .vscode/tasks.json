{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "odin.exe build ./src -subsystem:console -out:out/debug.exe -opt:0 -debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "odin.exe build ./src -subsystem:window -out:out/release.exe -opt:3 -no-bounds-check -resource:resources.rc",
        }
    ]
}